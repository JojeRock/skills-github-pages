import FreeCAD
import Part
from FreeCAD import Base

# ایجاد سند جدید
doc = FreeCAD.newDocument("PreciseCutCylinder")

# پارامترهای جدید
diameter = 16.0    # قطر به میلی‌متر
radius = diameter / 2
length = 80.0      # طول به میلی‌متر
cut_offset = 5.0   # فاصله جدید برش از مرکز (5mm آنورتر از وسط)

# ایجاد استوانه اصلی
cylinder = Part.makeCylinder(radius, length, Base.Vector(0,0,0), Base.Vector(0,0,1))

# ایجاد جعبه برش با عرض بسیار کم برای دقت بیشتر
cut_thickness = 0.1  # ضخامت بسیار کم برش (0.1mm)
cut_box = Part.makeBox(cut_thickness, diameter*2, length*2,
                      Base.Vector(cut_offset - cut_thickness, -diameter, -length))

# انجام عملیات برش و حذف قسمت برش خورده
result = cylinder.cut(cut_box)

# ایجاد جعبه برای حذف قسمت برش خورده (سمت چپ)
remove_box = Part.makeBox(cut_offset, diameter*2, length*2,
                         Base.Vector(-diameter, -diameter, -length))

# حذف نهایی قسمت برش خورده
final_result = result.cut(remove_box)

# اضافه کردن شیء به سند
cylinder_obj = doc.addObject("Part::Feature", "PreciselyCutCylinder")
cylinder_obj.Shape = final_result

# تنظیم نمایش
FreeCADGui.ActiveDocument.ActiveView.viewAxometric()
FreeCADGui.SendMsgToActiveView("ViewFit")
doc.recompute()
